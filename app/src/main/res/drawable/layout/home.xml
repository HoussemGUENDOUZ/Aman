<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whiteBk"
    >


    <fragment

        android:id="@+id/discCardHome"
        android:name="com.example.myaman.DiscCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <fragment
        android:id="@+id/navBarHome"
        android:name="com.example.myaman.NavBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        />

    <ImageView
        android:id="@+id/imgAnimation1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sos_circle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="553dp"
        android:text="Button"

    />
    <ImageView
        android:id="@+id/imgAnimation2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sos_circle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="553dp"
        android:text="Button"

        />

    <Button
        android:id="@+id/sos_button"
        style="@style/AppTheme.ButtonStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="553dp"
        android:drawableStart="@drawable/red_ball"
        android:onClick="goToReportEmaergency"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navBarHome"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Services disponble"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/grisBold"
            android:onClick="goToSpList"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Decouvrer plus"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:src="@drawable/ssss"

            />
    </LinearLayout>

</RelativeLayout>