<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les demandes"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/grisBold"
            android:id="@+id/lesDemandes"
            />
        <LinearLayout
            android:id="@+id/recentorders"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/lesDemandes"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="demandes actuelles"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:id="@+id/recentordersLV"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recentorders"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historique"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="10dp"
                android:id="@+id/historyordersLV"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>